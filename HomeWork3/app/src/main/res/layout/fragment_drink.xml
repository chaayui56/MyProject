<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3E5F5"
        tools:context=".DrinkFragment"> <!-- 1. 修正 context 為 DrinkFragment -->

    <!-- 2. "Select Drink" 頁面標題 -->
    <TextView
            android:id="@+id/tv_drink_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:text="Select Drink"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <!-- 3. 包含所有飲料選項的 RadioGroup (單選) -->
    <RadioGroup
            android:id="@+id/rg_drink"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@id/tv_drink_title"
            app:layout_constraintTop_toBottomOf="@id/tv_drink_title">

        <!-- 飲料選項 1: Cola -->
        <RadioButton
                android:id="@+id/rb_cola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cola"
                android:textSize="18sp" />

        <!-- 飲料選項 2: Iced Tea -->
        <RadioButton
                android:id="@+id/rb_iced_tea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Iced Tea"
                android:textSize="18sp" />

        <!-- 飲料選項 3: Water -->
        <RadioButton
                android:id="@+id/rb_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Water"
                android:textSize="18sp" />

    </RadioGroup>

    <!-- 4. "Done" 完成按鈕 -->
    <Button
            android:id="@+id/btn_done_drink"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="#673AB7"
            android:text="Done"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rg_drink" />

</androidx.constraintlayout.widget.ConstraintLayout>

